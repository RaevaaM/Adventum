@model  Adventum.Models.LoginModel

@{
    ViewData["Title"] = "Вход";
    Layout = "_Layout";
}

<div class="row justify-content-center">
    <div class="col-md-4">
        <section>
            <form asp-action="Index" method="post">
                <h2>@ViewData["Title"]</h2>
                <hr/>
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="@Model.Username" class="form-control" autocomplete="username" aria-required="true" placeholder="username"/>
                    <label asp-for="@Model.Username" class="form-label">Потребителско име</label>
                    <span asp-validation-for="@Model.Username" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="@Model.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password"/>
                    <label asp-for="@Model.Password" class="form-label">Парола</label>
                    <span asp-validation-for="@Model.Password" class="text-danger"></span>
                </div>
                <div class="checkbox mb-3">
                    <label asp-for="@Model.RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="@Model.RememberMe"/>
                        @Html.DisplayNameFor(m => m.RememberMe)
                    </label>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Вход</button>
                </div>
            </form>
        </section>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}